<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fallframework.platform.starter.data.mp.mapper.CommonMapper">

	<!-- 基础字段过滤 -->
	<sql id="Common_Column_Filter">
		<if test="param2.createUserId != null">
			AND createUserId =#{createUserId,jdbcType=BIGINT}
		</if>
		<if test="param2.modifyUserId != null">
			AND modifyUserId =#{modifyUserId,jdbcType=BIGINT}
		</if>
		<if test="param2.gmtCreate != null">
			AND gmtCreate =#{gmtCreate,jdbcType=TIMESTAMP}
		</if>
		<if test="param2.gmtModified != null">
			AND gmtModified =#{gmtModified,jdbcType=TIMESTAMP}
		</if>
		<!-- 创建时间范围 -->
		<if test="param2.gmtCreateStart != null">
			AND gmtCreate &gt;=#{gmtCreateStart, jdbcType=TIMESTAMP}
		</if>
		<if test="param2.createTimeEnd != null">
			AND gmtCreate &lt;=#{createTimeEnd, jdbcType=TIMESTAMP}
		</if>
		<!-- 修改时间范围 -->
		<if test="param2.gmtModifiedStart != null">
			AND gmtModified &gt;=#{gmtModifiedStart, jdbcType=TIMESTAMP}
		</if>
		<if test="param2.gmtModifiedEnd != null">
			AND gmtModified &lt;=#{gmtModifiedEnd, jdbcType=TIMESTAMP}
		</if>
	</sql>

</mapper>