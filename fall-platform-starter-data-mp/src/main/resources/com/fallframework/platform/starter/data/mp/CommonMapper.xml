<mapper namespace="com.fallframework.platform.starter.data.mp.mapper.CommonMapper">

	<!-- 基础字段过滤 -->
	<sql id="Common_Column_Filter">
		<if test="param2.createUserId != null">
			AND createUserId = #{param2.createUserId,jdbcType=BIGINT}
		</if>
		<if test="param2.modifyUserId != null">
			AND modifyUserId = #{param2.modifyUserId,jdbcType=BIGINT}
		</if>
		<if test="param2.gmtCreate != null">
			AND gmtCreate = #{param2.gmtCreate,jdbcType=TIMESTAMP}
		</if>
		<if test="param2.gmtModified != null">
			AND gmtModified = #{param2.gmtModified,jdbcType=TIMESTAMP}
		</if>
		<!-- 创建时间范围 -->
		<if test="param2.gmtCreateStart != null">
			AND gmtCreate &gt;= #{param2.gmtCreateStart, jdbcType=TIMESTAMP}
		</if>
		<if test="param2.createTimeEnd != null">
			AND gmtCreate &lt;= #{param2.createTimeEnd, jdbcType=TIMESTAMP}
		</if>
		<!-- 修改时间范围 -->
		<if test="param2.gmtModifiedStart != null">
			AND gmtModified &gt;= #{param2.gmtModifiedStart, jdbcType=TIMESTAMP}
		</if>
		<if test="param2.gmtModifiedEnd != null">
			AND gmtModified &lt;= #{param2.gmtModifiedEnd, jdbcType=TIMESTAMP}
		</if>
	</sql>

</mapper>