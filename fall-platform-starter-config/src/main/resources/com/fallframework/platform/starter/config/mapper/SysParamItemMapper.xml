<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fallframework.platform.starter.config.mapper.SysParamItemMapper">
	<resultMap id="BaseResultMap" type="com.fallframework.platform.starter.config.entity.SysParamItem">
		<!--@mbg.generated-->
		<result column="code" jdbcType="VARCHAR" property="code"/>
		<result column="value" jdbcType="VARCHAR" property="value"/>
		<result column="encrypted_value" jdbcType="VARCHAR" property="encryptedValue"/>
		<result column="desc" jdbcType="VARCHAR" property="desc"/>
		<result column="status" jdbcType="TINYINT" property="status"/>
		<result column="group_code" jdbcType="VARCHAR" property="groupCode"/>
		<result column="create_user_id" jdbcType="BIGINT" property="createUserId"/>
		<result column="modify_user_id" jdbcType="BIGINT" property="modifyUserId"/>
		<result column="gmt_create" jdbcType="TIMESTAMP" property="gmtCreate"/>
		<result column="gmt_modified" jdbcType="TIMESTAMP" property="gmtModified"/>
	</resultMap>
	<sql id="Base_Column_List">
		<!--@mbg.generated-->
		id, code, `value`, encrypted_value, `desc`, `status`, group_code, create_user_id,
		modify_user_id, gmt_create, gmt_modified
	</sql>

	<select id="list" resultMap="BaseResultMap">
		SELECT
		<include refid="Base_Column_List"/>
		FROM
		s_sys_param_item
		<where>
			<if test="param2.id != null">
				id = #{param2.id,jdbcType=BIGINT},
			</if>
			<if test="param2.code != null">
				AND code like CONCAT('%', #{code,jdbcType=VARCHAR}, '%')
			</if>
			<if test="param2.value != null">
				AND `value` like CONCAT('%', #{value,jdbcType=VARCHAR}, '%')
			</if>
			<if test="param2.encryptedValue != null">
				AND encrypted_value like CONCAT('%', #{encryptedValue,jdbcType=VARCHAR}, '%')
			</if>
			<if test="param2.desc != null">
				AND `desc` like CONCAT('%', #{desc,jdbcType=VARCHAR}, '%')
			</if>
			<if test="param2.status != null">
				AND `status` = #{status,jdbcType=TINYINT}
			</if>
			<if test="param2.groupCode != null">
				AND groupCode like CONCAT('%', #{groupCode,jdbcType=VARCHAR}, '%')
			</if>
			<!-- 基础字段过滤 -->
			<include refid="com.fallframework.platform.starter.data.mp.mapper.CommonMapper.Common_Column_Filter"/>
		</where>
		ORDER by id DESC
	</select>

</mapper>