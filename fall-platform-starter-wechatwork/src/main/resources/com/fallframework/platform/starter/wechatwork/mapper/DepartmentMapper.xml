<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fallframework.platform.starter.wechatwork.mapper.DepartmentMapper">
	<resultMap id="BaseResultMap" type="com.fallframework.platform.starter.wechatwork.entity.Department">
		<!--@mbg.generated-->
		<id column="id" jdbcType="BIGINT" property="id"/>
		<result column="name" jdbcType="VARCHAR" property="name"/>
		<result column="name_en" jdbcType="VARCHAR" property="nameEn"/>
		<result column="department_leader" jdbcType="VARCHAR" property="departmentLeader"/>
		<result column="parentid" jdbcType="BIGINT" property="parentid"/>
		<result column="order" jdbcType="BIGINT" property="order"/>
		<result column="create_user_id" jdbcType="BIGINT" property="createUserId"/>
		<result column="modify_user_id" jdbcType="BIGINT" property="modifyUserId"/>
		<result column="gmt_create" jdbcType="TIMESTAMP" property="gmtCreate"/>
		<result column="gmt_modified" jdbcType="TIMESTAMP" property="gmtModified"/>
	</resultMap>
	<sql id="Base_Column_List">
		<!--@mbg.generated-->
		id, `name`, name_en, department_leader, parentid, `order`, create_user_id,
		modify_user_id, gmt_create, gmt_modified
	</sql>

	<select id="list" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List"/>
		from wxwork_department
		<where>
			<if test="param2.id != null">
				id = #{param2.id,jdbcType=BIGINT}
			</if>
			<if test="param2.name != null">
				AND `name` LIKE CONCAT('%', #{param2.name,jdbcType=VARCHAR}, '%')
			</if>
			<if test="param2.nameEn != null">
				AND name_en LIKE CONCAT('%', #{param2.nameEn,jdbcType=VARCHAR}, '%')
			</if>
			<if test="param2.departmentLeader != null">
				AND department_leader LIKE CONCAT('%', #{param2.departmentLeader,jdbcType=VARCHAR}, '%')
			</if>
			<if test="param2.parentid != null">
				AND parentid = #{parentid,jdbcType=BIGINT}
			</if>
			<if test="param2.order != null">
				AND `order` = #{order,jdbcType=BIGINT}
			</if>
			<!-- 基础字段过滤 -->
			<include refid="com.fallframework.platform.starter.data.mp.mapper.CommonMapper.Common_Column_Filter"/>
		</where>
		ORDER BY id ASC
	</select>

</mapper>